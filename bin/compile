#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

PHP_TARBALL=https://s3-eu-west-1.amazonaws.com/midgard-heroku/php-5.4.8.tar.gz
TARGET_DIR=$HOME
BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR

echo "-----> Installing php 5.4.8"
curl --silent --max-time 60 --location "$PHP_TARBALL" | tar xz

